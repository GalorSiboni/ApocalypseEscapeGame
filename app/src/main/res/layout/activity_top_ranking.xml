<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopRanking"
    android:background="@drawable/toprank"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Top Ranking"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@android:color/black"
        android:textSize="55dp"
        android:layout_gravity="center">
    </TextView>

    <TextView
        android:id="@+id/FirstPlace"
        android:layout_width="wrap_content"
        android:typeface="serif"
        android:layout_height="wrap_content"
        android:text="1st Place: "
        android:textColor="@android:color/black"
        android:textSize="45sp"
        android:layout_gravity="center"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/SecondPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="2nd Place: 0"
        android:typeface="serif"
        android:textColor="@android:color/black"
        android:textSize="45dp"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        />
    <TextView
        android:id="@+id/ThirdPlace"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:typeface="serif"
        android:textColor="@android:color/black"
        android:textSize="45dp"
        android:text="3rd Place: 0"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/resetTable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:textSize="30sp"
            android:text="Reset"
            android:layout_marginRight="70dp"
            android:textColor="@android:color/black"
            />

        <Button
            android:id="@+id/backMain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_light"
            android:textSize="30sp"
            android:layout_marginRight="70dp"
            android:text="Back"
            android:textColor="@android:color/black"
            />

    </LinearLayout>
</LinearLayout>